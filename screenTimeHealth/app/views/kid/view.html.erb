<div class="row">
    <h1><%= @kid.name %></h1>
    <h3> Threshold (in minutes): <%= @kid.threshold %></h3>
    <h3> Threshold (in hours): <%= @kid.threshold %></h3>

    <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Threshold in mins</th>
        <th>Threshold in hours:mins</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @kid.name %></td>
        <td><%= @kid.threshold %></td>
        <td><%= @kid.threshold / 60 %> : <%= @kid.threshold % 60 %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="row">
  <a class="btn btn-lg btn-primary" target="_blank" href="/analytics/track?id=<%= @kid.id %>">Track</a>
  <a class="btn btn-lg btn-danger" href="/kid/delete?id=<%= @kid.id %>">Remove</a>
</div>
<div class="row">
  <h2>Sessions</h2>
</div>
<div class="row">
  <h3>Number of sessions: <%= @kid.session.count %></h3>
</div>
  <div class="row">
    <h3>
      Session Time Data for <%= @kid.name %>
    </h3>
    <% if @kid.session.length != 0 %>
    <%= high_chart("session_chart", @chart) %>
    <% end %>
  </div>