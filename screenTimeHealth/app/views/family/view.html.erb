<div class="container">
	<div class="row">
		<h2><%= @family.surname %></h2>
	</div>
  <div class="row">
    <%= link_to 'Add', family_add_path, :class => 'btn btn-primary btn-lg' %>
  </div>
  <div class="row">
    <h3> Number of kids: <%= @kids.count %> </h3>
  </div>
  <div class="row">
    <% @kids.each do |kid, index| %>
      <div class="col-md-4">
        <a href="/kid/view?id=<%= kid.id %>" type="button"> 
          <div class="panel">
              <div class="panel-heading">
                  <h3 class="panel-title"><%= kid.name %></h3>
              </div>
              <div class="panel-body">
                <div class="text-center">
                  <input type="text" value="<%= @last_kid_session[kid.id] > kid.threshold ? kid.threshold : @last_kid_session[kid.id] %>" data-max="<%= 10 %>" class="dial">
                </div>
              </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
  
</div>